<% if signed_in? %>
  <table class="front" summary="For signed-in users">
    <tr>
      <td class="main">
        <h1 class="micropost">New transaction</h1>
        <%= render 'shared/micropost_form' %>

       <h3 id="total_expense">Total expenses - <%=  number_to_currency(@user.total_cost, :unit => "$") %> </h3>
        <%= render 'shared/feed' %>
      </td>
    </tr>
  </table>
<% else %>

  <h1>Expense Tracker</h1>

  <p>
    This is the home page for the Expense tracker sample application.
  </p>

  <%= link_to "Try it? - Check it out!", signup_path, :class => "signup_button" %>
<% end %>